@model IEnumerable<project.report>

@{
    Layout = "~/Views/Shared/layoutMaster.cshtml";
}



<table class="table table-bordered text-center bg-light">
    <h1 class="text-center text-white">purchase report</h1>
   
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.custname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.total)
            </th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.custname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.total)
                </td>
                <td>
                    <a asp-action="ordersdetail" asp-route-custname="@item.custname ">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>