@{
    ViewData["Title"] = "admin_home";
}
@{
    Layout = "~/Views/Shared/layoutMaster.cshtml";
}

<p>
    <h1 style="text-align: center;" class="text-dark">Welcome @((string)ViewData["name"])</h1>
</p>

<h3 class="text-decoration-underline text-black text-capitalize text-center">You are in the admin home. We are happy to see you; feel free to change anything :).</h3>



<!-- Notifications -->
<div class="mt-4">
    <h4 class="text-center">Notifications</h4>
    <div class="alert alert-warning">
        New features have been added. Check the updates page for more information!
    </div>
</div>

<!-- User Profile Section -->
<div class="mt-4">
    <h4 class="text-center">Your Profile</h4>
    <p>Name: @ViewData["name"]</p>
    <p>Email: @ViewData["email"]</p>
    <a href="@Url.Action("EditProfile", "Admin")" class="btn btn-primary">Edit Profile</a>
</div>