@model project.Models.usersaccounts
@{
    Layout = "~/Views/Shared/layoutMaster.cshtml";
}

<form asp-action="customer_search" class="login-form">
    <h2 class="text-center">Search</h2> <hr />
    <div class="form-group">
    </div>
    <div class="form-group">
        <label class="control-label">Select Catagory</label>
        <select class="form-control" name="cata" id="ca" onchange="gettitle()">
            <option value="0">Please select</option>
            <option value="admin">admin</option>
            <option value="customer">customer</option>
        </select>
    </div>
    <div class="form-group">
        <label class="control-label">Select Name</label>
        <select class="form-control" name="tit" id="ti"> </select>
    </div>
    <input type="submit" value="Find" class="btn btn-success" />

<script>
    async function gettitle() {
        var cc = document.getElementById('ca').value;
        var response = await fetch('/getname/' + cc);
        let x = await response.json();
        var dd = "<option> Please select</option>";
        for (i = 0; i < x.length; i++) {
            dd += "<option>" + x[i].name + "</option>";
        }
        document.getElementById("ti").innerHTML = dd;
    }
</script>

<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.name)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.name)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.pass)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.pass)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.role)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.role)
    </dd>
</dl>
</div>
<div>
    
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> 
    <a asp-action="Index">Back to List</a>
    </div>
</form>